<li class="message">
	{{# Time }}
	<time datetime="{{ DateTime }}">{{ Time }}</time>
	{{/ Time }}
	{{^ Time }}
	<time datetime="{{ DateTime }}" class="hidden"></time>
	{{/ Time }}

	{{# Sender }}
	<span class="sender">
		<span class="{{ SenderClasses }}">{{{ Sender }}}</span>
	</span>
	{{/ Sender}}

	<span class="content">
		{{{ Message }}}
	</span>
</li>
